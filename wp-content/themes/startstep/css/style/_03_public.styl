* 
    margin 0
    padding 0
    -webkit-box-sizing border-box
    -moz-box-sizing    border-box
    -o-box-sizing      border-box
    box-sizing         border-box

html, 
body 
    margin 0
    height 100%
    direction rtl
    text-align right
h1, h2, h3, h4, h5, h6
    font-family ITC-Bd
ul, li
    list-style none
    padding 0
    margin 0
.price
    .old-price
        color dark-brownese
        text-decoration line-through
        font 10px ITC-Rg
    .offer
        color black
        font 18px ITC-Bd
a.second-button 
    font-family 'Messiri'
    color white
    background-color secondcolor
    font-size 11px
    padding 10px 40px
    &:hover
        text-decoration none
.brown
    color brownese
    font-family ITC-Bd
a
    &:hover 
        text-decoration none
div.dropdown-menu
    background-color brownese
    padding 0
    border-radius 6px
    a 
        color white
        border-bottom 1px solid dark-brownese
        padding .85em
        font-family 'ITC-Rg'
        font-size 14px
        &:hover
            background-color: transparent
        &:last-child
            border-bottom: none
.radio input[type=radio], .radio-inline input[type=radio], .checkbox input[type=checkbox], .checkbox-inline input[type=checkbox]
    margin-right 0

.hands-up
    h2
        background url("../images/009.png") no-repeat right
        font 40px Coco-Bd
        padding-right 1.6em
        margin 2em 0 1em
        color secondcolor